! Use a nice truetype font and size by default---
xterm*faceName: Monospace
xterm*faceSize: 9

! Every shell is a login shell by default (for inclusion of all necessary
! environment variables)---
xterm*loginshell: true

! Terminal colors---
! black on white scheme
xterm*foreground: #2e3436
xterm*background: #ffffff

! tangoesque scheme
! Black (not tango) + DarkGrey
xterm*color0:  #000000
xterm*color8:  #555753
! DarkRed + Red
xterm*color1:  #ff6565
xterm*color9:  #ff8d8d
! DarkGreen + Green
xterm*color2:  #93d44f
xterm*color10: #c8e7a8
! DarkYellow + Yellow
xterm*color3:  #eab93d
xterm*color11: #ffc123
! DarkBlue + Blue
xterm*color4:  #204a87
xterm*color12: #3465a4
! DarkMagenta + Magenta
xterm*color5:  #ce5c00
xterm*color13: #f57900
!DarkCyan + Cyan (both not tango)
xterm*color6:  #89b6e2
xterm*color14: #46a4ff
! LightGrey + White
xterm*color7:  #cccccc
xterm*color15: #ffffff

! General xterm settings---
xterm*internalBorder: 0
xterm*saveLines: 2000
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
xterm*cursorBlink: true

